<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_search_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px20"
    android:layout_marginBottom="@dimen/px10"
    android:background="@drawable/item_recycle_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:layout_width="0px"
        android:layout_height="1dp"
        android:layout_weight="3"/>

    <RelativeLayout
        android:id="@+id/contact_frame_search"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="54">

        <EditText
            android:id="@+id/ed_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/edittext_cursordrawable_color"
            android:maxWidth="435dp"
            android:hint="@string/contact_search"
            android:textColorHint="@color/gray_circle_color"
            android:focusedByDefault="false"
            android:background="@drawable/iv_contact_edit_bg"
            android:paddingStart="@dimen/px80"
            android:paddingEnd="@dimen/px20"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_contact_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:background="@drawable/iv_contact_search_selector" />
    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="1dp"
        android:layout_weight="7"/>

    <ImageView
        android:id="@+id/iv_contact_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_contact_sync_selector"
        android:scaleType="fitCenter" />
    <!--android:layout_width="0px"
    android:layout_height="wrap_content"
    android:layout_weight="9"-->
    <View
        android:layout_width="0px"
        android:layout_height="1dp"
        android:layout_weight="11"/>

</LinearLayout>