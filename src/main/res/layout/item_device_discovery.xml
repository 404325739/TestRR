<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayout_discovery_device"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_recycle_selector"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_discovery_name"
        style="@style/txt_px24"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/px10"
        android:singleLine="true"
        tools:text="JAC000A1-3455" />

    <ImageView
        android:id="@+id/iv_discovery_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_bt_link_n" />

</LinearLayout>