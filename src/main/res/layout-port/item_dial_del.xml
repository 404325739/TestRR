<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0px"
    android:layout_height="650px"
    android:layout_weight="@integer/item_dial_del_width"
    android:orientation="horizontal">
    <!--android:layout_marginStart="@dimen/del_margin_start"-->

    <View style="@style/style_view_dial_fill" />

    <LinearLayout
        style="@style/style_dial_iv1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_btn_del"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="27"
            android:background="@drawable/iv_btn_del_selector" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="39"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_btn_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/iv_btn_call_selector" />

            <ImageView
                android:id="@+id/iv_btn_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/iv_btn_set_selector" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>