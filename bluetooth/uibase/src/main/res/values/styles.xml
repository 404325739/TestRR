<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="customer_progress_dialog" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:fullDark">@drawable/uibase_dialog_bg</item>
        <item name="android:topDark">@drawable/uibase_dialog_bg</item>
        <item name="android:centerDark">@drawable/uibase_dialog_bg</item>
        <item name="android:bottomDark">@drawable/uibase_dialog_bg</item>
        <item name="android:fullBright">@drawable/uibase_dialog_bg</item>
        <item name="android:topBright">@drawable/uibase_dialog_bg</item>
        <item name="android:centerBright">@drawable/uibase_dialog_bg</item>
        <item name="android:bottomBright">@drawable/uibase_dialog_bg</item>
        <item name="android:bottomMedium">@drawable/uibase_dialog_bg</item>
        <item name="android:centerMedium">@drawable/uibase_dialog_bg</item>
    </style>

    <style name="theme.customer_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/customer_progress_dialog</item>
        <item name="android:progressBarStyleSmall">@style/customer_progress_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 对话框的属性 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- From project_gray -->
    <style name="ListViewStyle">
        <item name="android:divider">@color/translucent</item>
        <item name="android:dividerHeight">6px</item>
    </style>

</resources>