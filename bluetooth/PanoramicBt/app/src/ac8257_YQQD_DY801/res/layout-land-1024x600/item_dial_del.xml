<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0px"
    android:layout_height="match_parent"
    android:layout_weight="@integer/item_dial_del_width"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_btn_call"
        android:layout_width="@dimen/call_width"
        android:layout_height="@dimen/call_height"
        android:layout_marginTop="0px"
        android:background="@drawable/iv_btn_call_selector" />

    <ImageView
        android:id="@+id/iv_btn_set"
        android:layout_width="@dimen/call_width"
        android:layout_height="@dimen/call_height"
        android:layout_marginTop="@dimen/call_margintop"
        android:background="@drawable/iv_btn_set_selector" />

</LinearLayout>