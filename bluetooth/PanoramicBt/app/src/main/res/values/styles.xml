<resources>

    <!-- Base application theme. -->
    <style name="BtAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowDisablePreview">true</item>-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/iv_main_bg</item>
        <!--<item name="android:windowAnimationStyle">@style/Animation_Activity</item>-->

        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Application NoTitleTranslucentTheme theme. -->
    <style name="NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>

    <!--textview默认设置-->
    <style name="txt_default">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:lineSpacingExtra">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="txt_px16" parent="txt_default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_px24" parent="txt_default">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="txt_px26" parent="txt_default">
        <item name="android:textSize">26sp</item>
    </style>

    <!--弹出框样式-->
    <style name="Dialog" parent="@style/Theme.AppCompat.Dialog">
        <!--透明背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TranslucentActivity" parent="Theme.AppCompat.Light.NoActionBar">//无标题
        <item name="android:windowIsTranslucent">true</item>//透明
        <item name="android:windowBackground">@android:color/transparent</item>//透明
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>//透明
    </style>

    <style name="style_tab_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_tab_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_tab_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginLeft">20dp</item>-->
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="style_tab_tv" parent="@style/txt_px16">
        <item name="android:layout_marginTop">0px</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:padding">5dp</item>
        <item name="sizeToFit">true</item>
    </style>

    <style name="style_dial_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="style_view_dial_ll_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="style_dial_iv1">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="style_dial_iv2" parent="@style/style_dial_iv1">
    </style>
    <style name="style_view_dial_fill">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="style_view_fill">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--<item name="android:layout_marginStart">@dimen/dial_num_margin</item>-->
    <style name="style_contacts_mid_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="style_record_type_iv">
        <item name="android:layout_width">190px</item>
        <item name="android:layout_height">86px</item>
    </style>
    <style name="style_record_right_iv">
        <item name="android:layout_width">50px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="style_record_right_iv2" parent="@style/style_record_right_iv">
        <item name="android:layout_height">150px</item>
    </style>
    <style name="style_record_recyclerview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginstart_30</item>
        <item name="android:layout_marginStart">@dimen/marginstart_record_recyclerview</item>
    </style>
    <style name="style_device_title_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tip_textsize</item>
        <item name="android:paddingStart">10px</item>
    </style>
    <style name="style_device_right_btn">
        <item name="android:layout_width">107px</item>
        <item name="android:layout_height">159px</item>
        <item name="android:paddingTop">50px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_settings_div">
        <item name="android:layout_width">606px</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@drawable/iv_contact_list_div</item>
    </style>
    <style name="style_settings_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_settings_tv" parent="txt_default">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_settings_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumbTextPadding">1px</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textOn">@string/settings_switch_on</item>
        <item name="android:textOff">@string/settings_switch_off</item>
        <item name="android:showText">true</item>
        <item name="android:thumb">@drawable/main_check_thumb</item>
        <item name="android:track">@drawable/checkbox_selector</item>
    </style>

    <style name="style_settings_btn">
        <item name="android:layout_width">@dimen/px200</item>
        <item name="android:layout_height">@dimen/px40</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/iv_settings_namepin_btn</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/px5</item>
        <item name="android:paddingEnd">@dimen/px5</item>
    </style>
    <style name="style_half_screen_btn">
        <item name="android:layout_width">46px</item>
        <item name="android:layout_height">46px</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>
</resources>
