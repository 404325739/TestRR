<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:gravity="center_vertical"
	android:orientation="vertical">

	<include layout="@layout/item_screen_call_text" />

	<ImageView
		android:id="@+id/iv_call_phone"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="1dp"
		android:background="@drawable/iv_call_phone"
		android:visibility="gone" />


	<ImageView
		android:id="@+id/iv_call_hangup"
		android:layout_width="@dimen/callwindow_screen_btn_width"
		android:layout_height="@dimen/callwindow_screen_btn_height"
		android:layout_gravity="center"
		android:layout_marginTop="@dimen/screen_call_margintop"
		android:background="@drawable/iv_call_hangup_selector" />


</LinearLayout>