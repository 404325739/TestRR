<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re_contact"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_record_height"
    android:gravity="center_vertical"
    android:background="@drawable/item_recycle_selector"
    android:orientation="horizontal">

    <View
        android:layout_width="0px"
        android:layout_height="1px"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/tv_contact_name"
        style="@style/txt_px26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:singleLine="true"
        tools:text="小明" />

    <View
        android:layout_width="0px"
        android:layout_height="1px"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_contact_number"
        style="@style/txt_px26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:singleLine="true"
    tools:text="134 4590 7820" />

    <ImageView
        android:id="@+id/iv_contact_collect"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:scaleType="center"
        android:src="@drawable/iv_contact_collect_selector"
        android:visibility="gone" />

<!--    <com.jancar.bt.view.ThumbUpView
        android:id="@+id/iv_contact_thumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:scaleType="center"
        android:visibility="gone"
        app:unlikeType="0" />-->

</LinearLayout>