<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RadarView">
        <attr name="car_res" format="integer" />
    </declare-styleable>

    <declare-styleable name="LetterSlideBar">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textLightColor" format="color" />
        <attr name="bgletter" format="reference"/>
        <attr name="bgletter_width" format="dimension"/>
        <attr name="bgletter_height" format="dimension"/>
        <attr name="bgletter_x" format="dimension"/>
        <attr name="bgletter_y" format="dimension"/>
        <attr name="startwithspecial" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="max" format="integer"></attr>
        <attr name="progress" format="integer"></attr>
        <attr name="startAngle" format="integer"></attr>
        <attr name="ringColor" format="color"/>
        <attr name="ringProgressColor" format="color"/>
        <attr name="ringWidth" format="dimension"></attr>
        <attr name="sideRingWidth" format="dimension"></attr>
        <attr name="centreColor" format="color" />
        <attr name="centreTextColor" format="color" />
        <attr name="centreTextSize" format="dimension" />
        <attr name="centreTextIsDisplayable" format="boolean"></attr>
        <attr name="roundingspeed" format="integer"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <declare-styleable name="PathView">
        <attr name="text_view_layout_id" format="integer" />
        <attr name="end_limit" format="integer" />
    </declare-styleable>


    <!-- 可以单独使用五角星 -->
    <declare-styleable name="FiveStarsView">
        <attr name="color_five_star" format="color" />
        <attr name="checked_five_star" format="color" />
    </declare-styleable>

    <!-- 五角星的收藏动画相关属性 -->
    <declare-styleable name="FiveStarAnimation">
        <attr name="collect_view_checked" format="boolean" />
        <!-- diffuse_point就是动画过程中的小圆点 -->
        <attr name="diffuse_point_color" format="color" />
        <attr name="five_star_color" format="color" />
        <attr name="five_star_animation_duration" format="integer" />
        <attr name="five_star_ratio" format="float"/>
        <attr name="diffuse_point_ratio" format="float"/>
    </declare-styleable>

    <!-- CustomSwitch CheckBox的点击动画 -->
    <declare-styleable name="RRSwitch">
        <attr name="switch_check_color" format="color"/>
        <attr name="switch_un_check_color" format="color"/>
        <attr name="switch_circle_color" format="color"/>
        <attr name="switch_un_enable_color" format="color"/>
    </declare-styleable>
</resources>